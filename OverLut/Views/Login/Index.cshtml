@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Login</title>
    <style>
        :root{
            --bg-top: #D9D9D9;
            --bg-bottom:#6DB6FF;
            --card-bg:#ffffff;
            --input-bg:#e6e6e6;
            --muted:#6b6f78;
        }
        html,body{height:100%;}
        body{
            margin:0;
            font-family:Segoe UI, Roboto, "Helvetica Neue", Arial;
            background:linear-gradient(to bottom, var(--bg-top) 0%, #dfe7f2 40%, var(--bg-bottom) 100%);
            display:flex;
            align-items:center;
            justify-content:center;
        }
        .wrap{
            width:100%;
            max-width:520px;
            padding:40px 20px;
            box-sizing:border-box;
        }
        .card{
            background:var(--card-bg);
            border-radius:18px;
            padding:48px 56px 36px 56px;
            box-shadow: 0 8px 0 rgba(0,0,0,0.08), 0 12px 24px rgba(0,0,0,0.06);
        }
        .inputs{display:flex;flex-direction:column;gap:22px;margin-top:8px}
        .input-group{
            display:flex;align-items:center;gap:14px;
            background:var(--input-bg);
            border-radius:999px;
            padding:14px 20px;
            box-shadow: inset 6px 6px 12px rgba(0,0,0,0.18), inset -6px -6px 12px rgba(255,255,255,0.8);
        }
        .icon{
            width:36px;height:36px;display:inline-flex;align-items:center;justify-content:center;color:#222;flex:0 0 36px;
        }
        .input-group input{
            border:0;background:transparent;outline:none;font-size:18px;color:#222;width:100%;
        }
        .btn-wrap{display:flex;justify-content:center;margin-top:28px}
        .btn{
            width:160px;height:60px;border-radius:999px;border:0;cursor:pointer;
            background:var(--input-bg);box-shadow:6px 8px 18px rgba(0,0,0,0.18), -6px -6px 14px rgba(255,255,255,0.7);
            font-weight:800;color:var(--muted);font-size:20px
        }
        .footer{margin-top:22px;text-align:center;color:var(--muted);font-size:13px}
        a.register{color:var(--muted);text-decoration:none;font-weight:700}
        /* small responsive */
        @@media (max-width:600px){
            .card{padding:36px 28px}
        }
    </style>
</head>
<body>
    <div class="wrap">
        <div class="card">
            <form method="post" action="/Login/Create">
                @Html.AntiForgeryToken()
                <div class="inputs">
                    <div class="input-group">
                        <span class="icon" aria-hidden="true">
                            <!-- user icon -->
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M12 12a4 4 0 100-8 4 4 0 000 8z" stroke="#222" stroke-width="1.4" stroke-linecap="round" stroke-linejoin="round"/>
                                <path d="M20 21v-1a4 4 0 00-4-4H8a4 4 0 00-4 4v1" stroke="#222" stroke-width="1.4" stroke-linecap="round" stroke-linejoin="round"/>
                            </svg>
                        </span>
                        <input name="Username" type="text" placeholder="Username" autocomplete="username" />
                    </div>

                    <div class="input-group">
                        <span class="icon" aria-hidden="true">
                            <!-- lock icon -->
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <rect x="3" y="11" width="18" height="10" rx="2" stroke="#222" stroke-width="1.4"/>
                                <path d="M7 11V8a5 5 0 0110 0v3" stroke="#222" stroke-width="1.4" stroke-linecap="round" stroke-linejoin="round"/>
                            </svg>
                        </span>
                        <input name="Password" type="password" placeholder="Password" autocomplete="current-password" />
                    </div>

                    <div class="input-group">
                        <span class="icon" aria-hidden="true">
                            <!-- lock icon (repeat) -->
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <rect x="3" y="11" width="18" height="10" rx="2" stroke="#222" stroke-width="1.4"/>
                                <path d="M7 11V8a5 5 0 0110 0v3" stroke="#222" stroke-width="1.4" stroke-linecap="round" stroke-linejoin="round"/>
                            </svg>
                        </span>
                        <input name="Confirm" type="password" placeholder="Confirm" autocomplete="off" />
                    </div>
                </div>

                <div class="btn-wrap">
                    <button type="submit" class="btn">Login</button>
                </div>

                <div class="footer">If you don't have account | <a class="register" href="/Register">Register</a></div>
            </form>
        </div>
    </div>
</body>
</html>